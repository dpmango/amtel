              input(type="checkbox" name="type" id="type_21" value="20")
            .check__item.type-item
              label(for="type_22") Добыча полезных ископаемых
              input(type="checkbox" name="type" id="type_22" value="21")
            .check__item.type-item
              label(for="type_23") Социальный объект или государственное учреждение
              input(type="checkbox" name="type" id="type_23" value="22")
