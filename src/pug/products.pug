                  .table__head-item
                    p Скорость, Мб
                  .table__head-item
                    p Объем трафика, Гб
                  .table__head-item
                    p Абонентская плата в месяц
                .table__head-white
                  .table__head-item
                    p 5
                  .table__head-item
                    p 1024/512
                  .table__head-item
                    p 7
                  .table__head-item
                    p 7762 ₽
              .table__middle
                p.g-check МГМН (телематика)
